<resources>
    <!-- Other styles -->

    <style name="ToolbarButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/toolbar_button_background</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ToolbarButtonSelectedStyle" parent="ToolbarButtonStyle">
        <item name="android:background">@drawable/toolbar_button_selected_background</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <!-- Button 스타일 지정 -->
    <style name="CustomButtonStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#FF4081</item>
    </style>

    <!-- 라디오 버튼 스타일 지정 -->
    <style name="CustomRadioButtonStyle">
        <item name="android:textColor">#000000</item>
    </style>
</resources>
